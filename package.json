{
    "name": "typescript",
    "version": "1.0.2",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "prestart": "tcm src",
        "start": "cross-env NODE_ENV=development webpack-dev-server --open --content-base dist --env=dev",
        "prebuild": "tcm src && rimraf ./dist ./coverage",
        "build": "cross-env NODE_ENV=production webpack -p --env=prod --progress --display-error-details",
        "prebuild:start": "yarn build",
        "build:start": "serve -s -o -C -n dist",
        "lint": "tslint -c tslint.json -p tsconfig.json -t stylish ",
        "lint:css": "stylelint './src/**/*.{css,scss}'",
        "test": "jest --watch --no-cache",
        "test:ci": "jest --env=jsdom --no-cache --maxWorkers=2",
        "test:coverage": "cross-env NODE_ENV=test jest --env=jsdom --no-cache --coverage",
        "prepush": "yarn test:ci --notify && yarn lint && yarn lint:css",
        "version": "update-changelog && git add CHANGELOG.md"
    },
    "devDependencies": {
        "@types/enzyme": "3.1.3",
        "@types/enzyme-to-json": "^1.5.0",
        "@types/extract-text-webpack-plugin": "^3.0.0",
        "@types/html-webpack-plugin": "^2.28.0",
        "@types/jest": "^21.1.5",
        "@types/node": "^8.0.47",
        "@types/optimize-css-assets-webpack-plugin": "1.3.1",
        "@types/react": "16.0.20",
        "@types/react-dom": "16.0.2",
        "@types/react-hot-loader": "^3.0.5",
        "@types/react-test-renderer": "^16.0.0",
        "@types/webpack": "^3.0.14",
        "@types/webpack-env": "^1.13.2",
        "@types/webpack-merge": "^4.1.1",
        "awesome-typescript-loader": "^3.3.0",
        "babel-core": "6.26.0",
        "babel-loader": "7.1.2",
        "babel-polyfill": "6.26.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "cross-env": "5.1.1",
        "css-hot-loader": "^1.3.2",
        "css-loader": "0.28.7",
        "enzyme": "^3.1.0",
        "enzyme-adapter-react-16": "^1.0.3",
        "enzyme-to-json": "3.2.1",
        "extract-text-webpack-plugin": "^3.0.2",
        "html-webpack-plugin": "^2.30.1",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^21.2.1",
        "node-sass": "^4.6.0",
        "optimize-css-assets-webpack-plugin": "3.2.0",
        "prop-types": "15.6.0",
        "raf": "^3.4.0",
        "react-hot-loader": "3.1.1",
        "react-test-renderer": "16.0.0",
        "resolve-url-loader": "^2.2.0",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "serve": "6.4.1",
        "source-map-loader": "^0.2.3",
        "style-loader": "^0.19.0",
        "stylelint": "8.2.0",
        "stylelint-config-css-modules": "1.1.0",
        "stylelint-config-sass-guidelines": "3.1.0",
        "ts-jest": "21.1.4",
        "ts-node": "3.3.0",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.3.0",
        "tslint-react": "3.2.0",
        "tsutils": "^2.12.2",
        "typed-css-modules": "0.3.1",
        "typescript": "2.6.1",
        "typescript-babel-jest": "1.0.5",
        "typings-for-css-modules-loader": "1.7.0",
        "update-changelog": "1.0.2",
        "webpack": "^3.8.1",
        "webpack-dashboard": "0.4.0",
        "webpack-dev-server": "^2.9.4",
        "webpack-hot-middleware": "^2.20.0",
        "webpack-merge": "^4.1.1"
    },
    "dependencies": {
        "react": "^16.0.0",
        "react-dom": "^16.0.0-rc.3"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "skipBabel": true
            }
        },
        "setupFiles": [
            "<rootDir>/config/jest/bootstrap.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "^.+\\.test\\.tsx?$",
        "collectCoverageFrom": [
            "src/**/*.tsx",
            "!src/index.tsx",
            "!<rootDir>/node_modules/"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "ts",
            "tsx"
        ],
        "moduleNameMapper": {
            "^.+\\.s?css$": "identity-obj-proxy"
        },
        "mapCoverage": true,
        "coverageDirectory": "./coverage/"
    },
    "stylelint": {
        "extends": [
            "stylelint-config-sass-guidelines",
            "stylelint-config-css-modules"
        ],
        "rules": {
            "indentation": 4,
            "number-leading-zero": null,
            "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
            "order/properties-alphabetical-order": null
        }
    }
}
