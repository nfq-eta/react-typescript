{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/json-d-ts",
            "./node_modules/@types"
        ],
        "lib": ["es2015", "es6", "dom"]
    },
    "exclude": [
        "**/*.test.tsx",
        "node_modules"
    ]
}
