{
    "version": "2.1.4",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "./src",
        "moduleResolution": "classic",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/json-d-ts",
            "./node_modules/@types"
        ],
        "lib": ["es2015", "es6", "dom"],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*",
        "./typings/**/*"
    ]
}
